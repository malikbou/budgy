<div class="container sm mb-5">
  <h2><strong><%= @event.name %></strong></h2>
  <h4><%= @event.description %></h4>
  <p><%= "From #{@event.start_date.strftime('%d/%m/%Y')} to #{@event.end_date.strftime('%d/%m/%Y')}" %></p>
  <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <h5>💵 Spending</h5>
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{@event.expenses.sum(:amount)} over #{@event.currency} #{@event.budget}"  %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex flex-column">
          <div class="p-2">
            <h5>⏰ Daily Allowance</h5>
          </div>
          <div class="p-2">
            <p><%="#{@days_left} days left"%></p>
          </div>
        </div>
        <span class="badge bg-dark">
          <%="#{@event.currency} #{@daily_budget} per day"%>
        </span>
  </ul>

  <br>
  <%= link_to "Back to My Events", my_events_path, class: "btn btn-primary" %>
  <%= link_to "Edit Event", edit_event_path(@event), class: "btn btn-secondary" %>
  <%= link_to "Delete", event_path(@event),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>

<div class="container sm mb-5">
  <h3><strong>Budget</strong></h3>
  <div id="chart" class="container mb-3">
    <%= bar_chart [
    { name: "My Budget", data: @budget_totals },
    { name: "My Expenses", data: @clean_sort }
    ], overlap: true, library: {title: 'Side-by-Side Bar Chart', colors: ['#B2F', '#000']} %>
  </div>

  <% if @event.budgets.empty? %>
    <%= link_to "Create Budget", new_event_budget_path(@event), class: "btn btn-primary" %>
  <% else %>
  <ul class="list-group">
    <% @event.budgets.each do |budget| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🛩️  Flights
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.flights}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🚗  Transport
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.transport}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🏠  Accomodation
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.accommodation}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🍴  Eating Out
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.eating_out}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🎭  Entertainment
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.entertainment}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🏄‍♂️  Activities
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.activities}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🛍️  Shopping
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.shopping}" %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        🚨  Emergency
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{budget.emergency}" %>
        </span>
      </li>
  </ul>
    <br>
      <%= link_to "Edit Budget", edit_event_budget_path(@event, budget), class: "btn btn-secondary" %>
      <%= link_to "Delete", event_budget_path(@event, budget),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    <% end %>
  <% end %>
</div>

<div class="container sm mb-5">
  <div class="d-flex mb-3">
    <div class="me-auto p-2">
      <h3><strong>Expenses</strong></h3>
    </div>
    <div class="p-2">
      <%= link_to "Add Expense", new_event_expense_path(@event), class: "btn btn-primary" %>
    </div>
  </div>
  <ul class="list-group">
    <% @event.expenses.each do |expense| %>
      <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
        <strong><%= "#{Budget.human_attribute_name(expense.category)} - #{expense.description}" %></strong>
        <span class="badge bg-dark">
          <%= "#{@event.currency} #{expense.amount}" %>
        </span>
      </li>
    </ul>
      <%= link_to "Edit Expense", edit_event_expense_path(@event, expense), class: "btn btn-secondary btn-sm" %>
      <%= link_to "Delete", event_expense_path(@event, expense),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
  <% end %>
</div>

<div class="container sm mb-5">
  <ul>
    <% @clean_sort.each do |key, value| %>
      <li>
        <%= "#{key}: #{value}" %>
      </li>
    <% end %>
  </ul>
</div>

<div id="chart" class="container mb-3">
  <h5>My Budget</h5>
  <%= bar_chart @budget_totals, library:
  { title: 'Expense Categories', colors: ['#8A2BE2']
  } %>
</div>
